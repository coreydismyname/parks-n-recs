<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1>All Parks</h1>
<div>
  <a href="/parks/new">Add Park</a>
</div>
<% for (let park of parks) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(park.images.length) {%>
      <img
        crossorigin="anonymous"
        src="<%= park.images[0].url %>"
        alt=""
        class="img-fluid"
      />
      <% } else { %>
      <img
        crossorigin="anonymous"
        src="https://res.cloudinary.com/dsjmpyrls/image/upload/v1687471094/Park%20n%20Recs/iww7arqlj9fyzha5ze1f.jpg"
        alt=""
        class="img-fluid"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= park.title %></h5>
        <p class="card-text"><%= park.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= park.location %></small>
        </p>
        <a href="/parks/<%= park._id %>" class="btn btn-primary"
          >View <%= park.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const parks = {features: <%- JSON.stringify(parks) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
